{
  "name": "pigpio-fan",
  "version": "0.1",
  "slug": "pigpio-fan",
  "description": "Control your pwm fan with pigpio on Hass.io",
  "url": "https://github.com/pdefoy/Hassio-Addons/tree/master/pigpio",
  "arch": [
    "armhf",
    "armv7",    
    "aarch64"
  ],
  "startup": "services",
  "gpio": true,
  "privileged": ["SYS_RAWIO"],
  "devices":["/dev/mem", "/dev/vcio"],
  "ports": {
    "8888/tcp": 8888
  },
  "ports_description": {
    "8888/tcp": "The port to control pigpio"
  }
}
